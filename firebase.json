{
    "functions": {
        "source": "functions"
    },
    "database": {
        "rules": "firebaseConfiguration/database.rules.json"
    },
    "firestore": {
        "rules": "firebaseConfiguration/firestore.rules",
        "indexes": "firebaseConfiguration/firestore.indexes.json"
    },
    "hosting": {
        "public": "../architecture",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ]
    },
    "storage": {
        "rules": "firebaseConfiguration/storage.rules"
    },
    "emulators": {
        "firestore": {
            "port": 8080
        },
        "database": {
            "port": 9000
        },
        "hosting": {
            "port": 5000
        },
        "storage": {
            "port": 9199
        },
        "ui": {
            "enabled": true
        }
    }
}